<% if (action=="create") { %>

<div class="alert alert-success">
  <p class="mb-3"><b><%=name%></b> is <b><%=action%>d</b>.</p>
</div>
<% } %> <% if (action=="delete") { %>

<div class="alert alert-danger">
  <p class="mb-3"><b><%=name%></b> is <b><%=action%>d</b>.</p>
</div>
<% } %> <% if (action=="remove") { %>
<div class="alert alert-danger">
  <p class="mb-3"><b><%=name%></b>'s role is <b><%=action%>d</b>.</p>
</div>

<% } %> <% if (action=="update") { %>

<div class="alert alert-primary">
  <p class="mb-3"><b><%=name%></b> is <b><%=action%>d</b>.</p>
</div>

<% } %> <% if (action=="like") { %>

<div class="alert alert-success">
  <p class="mb-3"><b><%=name%></b> is <b><%=action%>d</b>.</p>
</div>
<% } %> <% if (action=="verification") { %>

<div class="alert alert-success">
  <p class="mb-3">Verification mail sent to <b><%=name%></b>.</p>
</div>
<% } %> <% if (action=="unlike") { %>

<div class="alert alert-danger">
  <p class="mb-3"><b><%=name%></b> is <b><%=action%>d</b>.</p>
</div>
<% } %>
