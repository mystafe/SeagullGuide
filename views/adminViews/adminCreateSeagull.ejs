<h1 class="mb-3">Seagull create page</h1>
<hr />

<div class="container mt-3">
  <form method="post" enctype="multipart/form-data" action="/admin/seagulls?_csrf=<%=csrfToken%>">
    <!--csrf-->
    <div class="col-md-12 mt-3">
      <div class="row">
        <div class="col-md-7">
          <div class="row mb-3">
            <label for="seagullName" class="col-sm-2 col-form-label"
              >Name:
            </label>
            <div class="col-sm-8">
              <input
                class="form-control"
                type="text"
                id="seagullName"
                name="seagullName"
              />
            </div>
          </div>

          <div class="row mb-3">
            <label for="image" class="col-sm-2 col-form-label">Image: </label>
            <div class="col-sm-8">
              <input
                class="form-control"
                type="file"
                id="image"
                name="image"
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-8 offset-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="isAlive"
                  name="isAlive"
                />
                <label class="form-check-label" for="isAlive">isAlive?</label>
              </div>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-8 offset-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="isFavorite"
                  name="isFavorite"
                />
                <label class="form-check-label" for="isFavorite">
                  Is favorite?
                </label>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-5">
          <label for="expertise" class="col-form-label"
            ><strong
              ><u>
                Expertise
              </u></strong           >
          </label>
          <% expertises.forEach(ex => { %>    
            <div class="form-check">             
              <input class="form-check-input" type="checkbox" id="expertise_<%=ex.id %>" name="expertiseIds[]" value="<%=ex.id%>"/>
              <label class="form-check-label" for="expertise_<%=ex.id %>"><%=ex.expertiseName %></label>
            </div>
          <% }) %>
         </div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-10 offset-sm-6">
            <button type="submit" class="btn btn-primary">Create</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
